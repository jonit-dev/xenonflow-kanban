{
  "name": "xenonflow-kanban-server",
  "version": "1.0.0",
  "description": "REST API server for XenonFlow Kanban board",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/docs dist/database/migrations && cp src/docs/openapi.yaml dist/docs/ && cp src/database/migrations/*.sql dist/database/migrations/",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:migrate": "tsx src/database/migrate.ts"
  },
  "keywords": ["kanban", "rest", "api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "reflect-metadata": "^0.2.1",
    "typedi": "^0.10.0",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
